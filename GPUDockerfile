FROM brikerman/ubuntu18_python3_cuda10.1:3.7.9

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

COPY requirements.txt /usr/src/app/

RUN pip3 install -r requirements_gpu.txt -i https://mirrors.aliyun.com/pypi/simple

RUN apt update

RUN apt install libgl1-mesa-glx -y

COPY . /usr/src/app

EXPOSE 2021


CMD python app.py
